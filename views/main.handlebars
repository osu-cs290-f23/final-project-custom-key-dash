<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Custom Key Dash</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100&family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <script src="/keydash.js" charset="utf-8" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.8/handlebars.min.js"></script>
    <script src="/customTestTemplate.js" charset="utf-8" defer></script>
  </head>


  <body>

       <header>
            <h1 class="site-title">Custom Key Dash</h1>
       </header>

       <div id="main-content">
          
            <div id="test-container">
                 <h1 id="test-title">Default Test</h1>
                 <div id="test-box">
                      <div id="test-text">
                           <span id="correct"></span><span id="incorrect"></span><span id="unattempted"></span>
                      </div>
                      <div id="test-results" class="hidden">
                         <p>RESULTS</p>
                         <p id="wpm-result"></p>
                         <p>NAME:</p>
                         <p><input type="text" id="name-input"/></p>
                         <button id="upload-result-button" class="action-button">Upload Result</button>
                      </div>
                 </div>
            </div>

            <div id="sidebar">
               <button id="replay-test-button" class="action-button">Restart Test</button>
               <button id="default-test-button" class="action-button">Default Test</button>
               <button id="add-custom-test-button" class="action-button">Submit a Custom Test</button>
               <a href="/leaderboard"><button class="action-button">View Leaderboard</button></a>
            </div>

        </div>

        <div id="custom-tests">
        </div>

        <div id="modal-backdrop" class="hidden"></div>
        <div id="custom-test-modal" class="hidden" >
             <div id="modal-content">
                  <div id="modal-header">
                       <h3>Create a Custom Test</h3>
                       <button type="button" id="modal-close">&times;</button>
                  </div>
                  <div id="modal-body">
                       <div class="custom-test-input">
                            <label for="title-input">Title</label>
                            <input type="text" id="title-input">
                       </div>

                       <div class="custom-test-input">
                            <label for="custom-test-body">Body</label>
                            <textarea id="custom-test-body"></textarea>
                       </div>
                  </div>
                  <div id="modal-footer">
                       <button type="button" id="modal-cancel" class="action-button">Cancel</button>
                       <button type="button" id="modal-accept" class="action-button">Submit Test</button>
                  </div>
             </div>
        </div>
</body>
</html>